# PostgreSQL Configuration
POSTGRES_DB=kollabspace
POSTGRES_USER=kollabspace_user
POSTGRES_PASSWORD=kollabspace_dev_password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=kollabspace_redis_password
REDIS_PORT=6379

# pgAdmin Configuration (optional)
PGADMIN_EMAIL=admin@kollabspace.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Backend Configuration
BACKEND_PORT=8080
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Spring Boot Configuration (for local development without Docker)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/kollabspace
SPRING_DATASOURCE_USERNAME=kollabspace_user
SPRING_DATASOURCE_PASSWORD=kollabspace_dev_password

# Production - Override these in production!
# POSTGRES_PASSWORD=<strong-password>
# REDIS_PASSWORD=<strong-redis-password>
# WEBSOCKET_ALLOWED_ORIGINS=https://yourdomain.com